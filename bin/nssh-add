#!/usr/bin/env node

let program = require('commander');
let chalk = require('chalk');
let content = require('../lib/content');


program
    .usage('<host> <hostname> <user> <file> <auth>');


program.on('--help', function () {
    console.log();
    console.log('  Examples:');
    console.log();
    console.log(chalk.gray('    # 通过nssh 添加配置, '));
    console.log('    $ nssh add ssh0 192.168.0.1 root');
    console.log();
});

/**
 * Help.
 */
function help() {
    program.parse(process.argv);
    if (program.args.length < 2) return program.help();
}

help();

let host = program.args[0];
let hostname = program.args[1];
let user = program.args[2] || false;
let file = program.args[3] || false;
let auth = program.args[4] || false;

content.addConfig({
    host,
    hostname,
    user,
    file,
    auth
});